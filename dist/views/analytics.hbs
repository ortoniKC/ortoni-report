<div class="section">
    <div class="container">
        <h1 class="title is-3 has-text-centered">Test Analytics Dashboard</h1>

        <!-- Summary Section -->
        <section class="box">
            <h2 class="title is-4">Summary</h2>
            <div class="columns is-multiline">
                <div class="column is-one-third">
                    <p><strong>Total Runs:</strong> {{reportAnalyticsData.summary.totalRuns}}</p>
                    <p><strong>Total Tests:</strong> {{reportAnalyticsData.summary.totalTests}}</p>
                </div>
                <div class="column is-one-third">
                    <p><strong>Passed:</strong> {{reportAnalyticsData.summary.passed}}</p>
                    <p><strong>Failed:</strong> {{reportAnalyticsData.summary.failed}}</p>
                </div>
                <div class="column is-one-third">
                    <p><strong>Pass Rate:</strong> {{reportAnalyticsData.summary.passRate}}%</p>
                    <p><strong>Avg Duration:</strong> {{reportAnalyticsData.summary.avgDuration}} ms</p>
                </div>
            </div>
        </section>

        <!-- Trends Chart -->
        <section class="box">
            <h2 class="title is-4">Trends Over Time</h2>
            <canvas id="trendChart" height="100"></canvas>
        </section>

        <!-- Flaky Tests -->
        <section class="box">
            <h2 class="title is-4">Top Flaky Tests</h2>
            <table class="table is-striped is-fullwidth">
                <thead>
                    <tr>
                        <th>Test ID</th>
                        <th>Passed</th>
                        <th>Failed</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each reportAnalyticsData.flakyTests}}
                    <tr>
                        <td>{{this.test_id}}</td>
                        <td>{{this.passed}}</td>
                        <td>{{this.failed}}</td>
                        <td>{{this.total}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>

        <!-- Slowest Tests -->
        <section class="box">
            <h2 class="title is-4">Slowest Tests</h2>
            <table class="table is-striped is-fullwidth">
                <thead>
                    <tr>
                        <th>Test ID</th>
                        <th>Avg Duration (ms)</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each reportAnalyticsData.slowTests}}
                    <tr>
                        <td>{{this.test_id}}</td>
                        <td>{{this.avg_duration}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </div>
<script>
  const ctx = document.getElementById('trendChart').getContext('2d');
  const trendChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: {{{ json chartData.labels }}},
      datasets: [
        {
          label: 'Passed',
          data: {{ json chartData.passed }},
          borderColor: 'green',
          fill: false
        },
        {
          label: 'Failed',
          data: {{ json chartData.failed }},
          borderColor: 'red',
          fill: false
        },
        {
          label: 'Avg Duration (ms)',
          data: {{ json chartData.avgDuration }},
          borderColor: 'blue',
          fill: false,
          yAxisID: 'y1'
        }
      ]
    },
    options: {
      responsive: true,
      scales: {
        y: {
          beginAtZero: true,
          title: { display: true, text: 'Count' }
        },
        y1: {
          beginAtZero: true,
          position: 'right',
          title: { display: true, text: 'Duration (ms)' },
          grid: { drawOnChartArea: false }
        }
      }
    }
  });
</script>

</div>