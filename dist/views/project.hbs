{{!-- --flaky-gradient: linear-gradient(135deg, #ffd65a 0%, #ffb70f 100%);
--retry-gradient: linear-gradient(135deg, #c0cad9 0%, #94a3b8 100%);
--skip-gradient: linear-gradient(135deg, #99e1ff 0%, #66d1ff 100%); --}}
<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #3a6b6e 0%, #274754 100%);
        --success-gradient: linear-gradient(135deg, #34d399 0%, #059669 100%);
        --error-gradient: linear-gradient(135deg, #f87171 0%, #dc2626 100%);
        --glass-bg: rgba(255, 255, 255, 0.7);
        --glass-border: rgba(255, 255, 255, 0.1);
        --shadow-sm: 0 2px 4px -1px rgba(0, 0, 0, 0.1);
    }

    .sidebar {
        height: 100%;
        overflow-y: auto;
        max-height: calc(100vh - 100px);
        padding: 0px 10px 0px 0px;
    }

    .test-group {
        margin-bottom: 0.5rem;
        border-radius: 8px;
        transition: all 0.2s ease;
    }

    .test-group summary {
        padding: 0.5rem;
        cursor: pointer;
        user-select: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        border-radius: 8px;
        background: var(--primary-gradient);
        color: white;
    }

    .test-suite {
        margin: 0.35rem;
        border-radius: 6px;
        border: 1px solid var(--glass-border);
    }

    .test-suite summary {
        padding: 0.35rem 0.5rem;
        background: transparent;
        color: inherit;
        border-radius: 6px;
        transition: background-color 0.2s ease;
    }

    .test-case {
        margin: 0.35rem;
        border-radius: 6px;
    }

    .test-case summary {
        padding: 0.35rem 0.5rem;
        color: inherit;
        background: transparent;
    }

    .test-item {
        padding: 0.4rem 0.5rem;
        margin: 0.35rem;
        border-radius: 6px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .status-passed {
        background: var(--success-gradient);
        color: white;
    }

    .status-failed {
        background: var(--error-gradient);
        color: white;
    }

    .icon-chevron {
        transition: transform 0.2s ease;
        width: 16px;
        height: 16px;
    }

    details[open]>summary .icon-chevron {
        transform: rotate(90deg);
    }

    .duration-tag {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        border-radius: 1rem;
        margin-left: auto;
        opacity: 0.8;
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-5px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    details[open]>.test-content {
        animation: slideIn 0.2s ease-out;
    }
</style>
<div class="content sidebar">
    {{#if showProject}}
    {{#each groupedResults}}
    <details class="test-group">
        <summary class="is-size-5">
            <div class="icon-text">
                <span class="icon">
                    <svg class="icon-chevron" width="16" height="16" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="9 18 15 12 9 6" />
                    </svg>
                </span>
                <span>{{@key}}</span>
            </div>
        </summary>
        <div class="test-content">
            {{#each this}}
            <details class="test-suite">
                <summary class="is-size-5 is-capitalized">
                    <span class="icon is-small">
                        <svg class="image is-16x16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
