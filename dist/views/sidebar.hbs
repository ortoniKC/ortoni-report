<style>
    /* Additional styles for sidebar layout */
    :root {
        --sidebar-width: 250px;
        --sidebar-collapsed-width: 60px;
        --primary-color: #735DA5;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    .app-container {
        display: flex;
        flex: 1;
        overflow: hidden;
    }

    .sidebar {
        width: var(--sidebar-width);
        border-right: 1px solid #e0e0e0;
        height: 100vh;
        position: fixed;
        left: 0;
        transition: width 0.3s ease;
        z-index: 10;
    }

    .sidebar.collapsed {
        width: var(--sidebar-collapsed-width);
    }

    .sidebar-header {
        padding: 1rem;
        border-bottom: 1px solid #e0e0e0;
        font-weight: bold;
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .sidebar-footer {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .sidebar-menu-item {
        padding: 0;
    }

    .sidebar-menu-link {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        text-decoration: none;
        transition: background-color 0.2s;
    }

    .sidebar-menu-link.active {
        font-weight: bold;
        border-left: 3px solid var(--primary-color);
    }

    .sidebar-menu-link .icon {
        margin-right: 0.5rem;
    }

    .main-content {
        flex: 1;
        margin-left: var(--sidebar-width);
        padding: 1.5rem;
        overflow-y: auto;
        transition: margin-left 0.3s ease;
    }

    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: var(--header-height);
        z-index: 20;
    }

    .theme {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        text-decoration: none;
        transition: background-color 0.2s;
        bottom: 65px;
        position: absolute;
    }

    .theme .icon {
        margin-right: 0.5rem;
    }


    .section {
        margin-top: var(--header-height);
        padding-top: 1rem;
    }

    /* Mobile responsive styles */
    @media screen and (max-width: 768px) {
        .sidebar {
            transform: translateX(-100%);
        }

        .sidebar.is-active {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        .sidebar-toggle {
            display: block;
        }

        .sidebar-toggle-btn {
            display: none;
        }
    }

    .sidebar-toggle-btn {
        position: absolute;
        bottom: 20px;
        right: -15px;
        width: 30px;
        height: 30px;
        background-color: var(--primary-color);;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 20;
        border: none;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .sidebar-menu-text {
        transition: opacity 0.2s ease;
        white-space: nowrap;
    }

    .sidebar.collapsed .sidebar-menu-text {
        opacity: 0;
        visibility: hidden;
    }

    .sidebar.collapsed .sidebar-header {
        text-align: center;
        padding: 1rem 0.5rem;
    }

    .main-content.expanded {
        margin-left: var(--sidebar-collapsed-width);
    }
    .sidebar-header {
        cursor: none;
        display: flex;
        align-items: center;
        justify-content: start;
        padding: 1rem;
        border-bottom: 1px solid #e0e0e0;
        font-weight: bold;
        height: 60px; /* Fixed height for consistency */
    }

    .sidebar-header .logo {
        width: 30px; /* Adjust logo size as needed */
        height: 30px;
    }

    .sidebar-header .header-text {
        display: block; /* Show text by default */
    }

    /* Collapsed state adjustments */
    .sidebar.collapsed .sidebar-header .header-text {
        display: none; /* Hide text when collapsed */
    }

    .sidebar.collapsed .sidebar-header .logo {
        display: block; /* Show logo when collapsed */
    }
</style>
<aside class="sidebar" id="sidebar">
     <div class="sidebar-header">
        <figure class="image">
          <img alt="Logo" class="logo" src="https://raw.githubusercontent.com/ortoniKC/ortoni-report/refs/heads/main/ortoni.png" />
        </figure>
        <span class="header-text ml-4 title is-5">Ortoni Report</span>
    </div>
    <ul class="sidebar-menu">
        <li class="sidebar-menu-item">
            <a class="sidebar-menu-link active" data-section="dashboard">
                <span class="icon">
                    <i class="fa fa-chart-bar"></i>
                </span>
                <span class="sidebar-menu-text">Dashboard</span>
            </a>
        </li>
        <li class="sidebar-menu-item">
            <a class="sidebar-menu-link" data-section="tests">
                <span class="icon">
                    <i class="fa fa-vial"></i>
                </span>
                <span class="sidebar-menu-text">Tests</span>
            </a>
        </li>
    </ul>
    <a class="theme" data-theme-status="{{preferredTheme}}" id="toggle-theme">
        <span class="icon">
            <i class="" id="theme-icon"></i>
        </span>
        <span class="sidebar-menu-text">Theme</span>
    </a>

    <button class="sidebar-toggle-btn" id="sidebar-toggle">
        <i class="fa fa-chevron-left" id="sidebar-toggle-icon"></i>
    </button>
</aside>